<Window x:Class="SqlIdeProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlIdeProject"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="SQL IDE" Height="700" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="10">
            <StackPanel>
                <TextBlock Text="Підключення до Бази Даних" FontWeight="Bold" FontSize="16"/>
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Тип БД:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="DbTypeComboBox" Grid.Column="1" SelectedIndex="0">
                        <ComboBoxItem Content="SQLite"/>
                        <ComboBoxItem Content="PostgreSQL"/>
								<ComboBoxItem Content="MySQL"/>
								<ComboBoxItem Content="Oracle"/>
                    </ComboBox>

                    <Button x:Name="ConnectButton" Content="Підключитись" Grid.Column="2" Padding="10,5" Click="ConnectButton_Click" Margin="10,0,0,0"/>
                </Grid>
                <TextBlock Text="Рядок підключення:" Margin="0,10,0,5"/>
                <TextBox x:Name="ConnectionStringTextBox" Text="Data Source=main.sqlite" FontFamily="Consolas"/>
            </StackPanel>
        </Border>

        <Grid x:Name="IdeGrid" Grid.Row="1" Margin="0,10,0,0" IsEnabled="False">
             <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Введіть SQL-запит:" FontWeight="Bold"/>
            <avalonedit:TextEditor x:Name="QueryTextEditor" Grid.Row="1" Margin="0,5,0,0" Height="150" SyntaxHighlighting="SQL" ShowLineNumbers="True" FontFamily="Consolas" FontSize="14"/>
        </Grid>
         <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,185,0,0">
            <Button x:Name="ExecuteQueryButton" Content="Виконати запит (SELECT)" Padding="10,5" Click="ExecuteQueryButton_Click"/>
            <Button x:Name="ShowSchemaButton" Content="Показати схему" Margin="10,0,0,0" Padding="10,5" Click="ShowSchemaButton_Click"/>
            <Button x:Name="CompareSchemasButton" Content="Порівняти схеми (Тест)" Margin="10,0,0,0" Padding="10,5" Click="CompareSchemasButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="ResultsDataGrid" Grid.Row="2" Margin="0,10,0,0" IsReadOnly="True"/>
        <StatusBar Grid.Row="2" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Очікування підключення..."/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>