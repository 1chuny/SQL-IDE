<Window x:Class="SqlIdeProject.SchemaCompareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Порівняння Схем" Height="600" Width="900"
        Background="#2D2D30" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="0,0,0,10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Оберіть Користувача 1 (Ліворуч):" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ProfileCombo1" DisplayMemberPath="ProfileName"/>
                </StackPanel>

                <Button Content="ПОРІВНЯТИ" Grid.Column="1" Width="100" Height="30" Margin="20,18,20,0" Click="CompareBtn_Click"/>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Оберіть Користувача 2 (Праворуч):" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ProfileCombo2" DisplayMemberPath="ProfileName"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/> <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TreeView x:Name="Tree1" Grid.Column="0" Background="#1E1E1E" BorderThickness="1" BorderBrush="#3E3E42"/>
            
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#3E3E42"/>
            
            <TreeView x:Name="Tree2" Grid.Column="2" Background="#1E1E1E" BorderThickness="1" BorderBrush="#3E3E42"/>
        </Grid>
    </Grid>
</Window>