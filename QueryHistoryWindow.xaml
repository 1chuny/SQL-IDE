<Window x:Class="SqlIdeProject.QueryHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlIdeProject"
        mc:Ignorable="d"
        Title="Історія запитів" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        
        Loaded="Window_Loaded"> 
    <Grid Margin="10">
        
        <ListView x:Name="HistoryListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Час" Width="140" DisplayMemberBinding="{Binding ExecutionTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" />
                    
                    <GridViewColumn Header="Запит" Width="300" DisplayMemberBinding="{Binding QueryText}" />
                    
                    <GridViewColumn Header="Статус" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding WasSuccessful, Converter={StaticResource BoolToStatusConverter}}" 
                                           Foreground="{Binding WasSuccessful, Converter={StaticResource BoolToBrushConverter}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>