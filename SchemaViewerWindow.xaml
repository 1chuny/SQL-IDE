<Window x:Class="SqlIdeProject.SchemaViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Перегляд Структури БД" Height="600" Width="400"
        Background="#2D2D30" WindowStartupLocation="CenterOwner">
    <Grid>
        <TreeView x:Name="MainTree" Background="Transparent" BorderThickness="0" Margin="10">
            <TreeView.Resources>
                <Style TargetType="TreeViewItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="5,2"/>
                </Style>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>